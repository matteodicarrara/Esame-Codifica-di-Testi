							<distinct type = "archaic">ch’io avea</distinct> ricevuto la tua lettera ed
						<!--ANNOTAZIONE A MARGINE-->
						<unclear unit = "2 lines" facs = "#LL1.29_line_1fr_00"></unclear>
						<lb xml:id="LL1.29_lb_1fr_06" n="6" facs="#LL1.29_line_1fr_06"/>
							inviato a <placeName ref = "#London">Londra</placeName> quella per 
